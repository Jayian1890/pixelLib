# yaml-language-server: $schema=https://json.schemastore.org/clangd.json
CompileFlags:
  CompilationDatabase: build/
  Add:
    - "-std=c++23"
    - "-I./include"
    - "-I./tests/helpers"
    - "-I./third-party"
Diagnostics:
  MissingIncludes: Strict
  UnusedIncludes: Strict
Index:
  Background: Build
  StandardLibrary: true