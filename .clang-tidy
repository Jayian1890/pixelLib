  -hicpp-pro-type-vararg,
  -hicpp-no-assembler,
  -cert-dcl37-c,
  -cert-dcl51-cpp,
  -cert-dcl54-cpp,
  -cert-oop54-cpp,
  -cert-oop57-cpp,
  -cert-oop58-cpp,
