  -readability-uppercase-literal-suffix,
  -readability-use-anyofallof,
  -readability-avoid-const-params-in-decls

# Warning level configuration
WarningsAsErrors: >
  bugprone-*,
  cert-*,
  concurrency-*,
  misc-definitions-in-headers,
  misc-misleading-bidirectional,
  misc-misleading-identifier,
  misc-misplaced-const,
  misc-redundant-expression,
  misc-static-assert,
  misc-throw-by-value-catch-by-reference,
  misc-unconventional-assign-operator,
  portability-simd-intrinsics,
  readability-delete-null-pointer,
  readability-duplicate-include,
  readability-misleading-indentation,
  readability-misplaced-array-decl,
  readability-redundant-control-flow,
  readability-redundant-declaration,
  readability-redundant-function-ptr-dereference,
  readability-redundant-member-init,
  readability-redundant-preprocessor,
  readability-redundant-smartptr-get,
  readability-redundant-string-cstr,
  readability-redundant-string-init,
  readability-simplify-subscript-expr,
  readability-static-accessed-through-instance,
  readability-string-compare,
  readability-uniqueptr-delete-release,
  readability-uppercase-literal-suffix,
  readability-use-anyofallof

# Header filter - only analyze project headers
HeaderFilterRegex: >
  ^(include/|tests/).*

# Exclude patterns - ignore third-party and build directories
ExcludeFiles: >
  third-party/.*,
  build/.*,
  .git/.*,
  .*\.git/.*

# Check options
CheckOptions:
  # Performance tuning
  - key: performance-move-const-arg.CheckTriviallyCopyableMove
    value: false
  - key: performance-unnecessary-value-param.IncludeStyle
    value: false
  - key: performance-for-range-copy.WarnOnAllAutoCopies
    value: false
  
  # Modernize options
  - key: modernize-loop-convert.UseAuto
    value: false
  - key: modernize-loop-convert.MinConfidence
    value: reasonable
  - key: modernize-loop-convert.MaxCopySize
    value: 16
  - key: modernize-use-override.IgnoreDestructors
    value: false
  - key: modernize-pass-by-value.IncludeStyle
    value: false
  
  # Readability options
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.ParameterCase
    value: lower_case
  - key: readability-identifier-naming.MemberCase
    value: lower_case
  - key: readability-identifier-naming.MemberPrefix
    value: _
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.EnumConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.GlobalConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.ConstantPrefix
    value: k
  - key: readability-identifier-naming.GlobalConstantPrefix
    value: k
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: _
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: _
  - key: readability-function-size.LineThreshold
    value: 50
  - key: readability-function-size.StatementThreshold
    value: 20
  - key: readability-function-size.BranchThreshold
    value: 8
  - key: readability-function-size.ParameterThreshold
    value: 5
  - key: readability-implicit-bool-conversion.AllowIntegerConditions
    value: false
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: false
  
  # Bugprone options
  - key: bugprone-narrowing-conversions.WarnOnFloatingPointNarrowingConversion
    value: false
  - key: bugprone-narrowing-conversions.WarnOnIntegerNarrowingConversion
    value: false
  - key: bugprone-narrowing-conversions.WarnOnFloatingPointNarrowingConversion
    value: false
  - key: bugprone-narrowing-conversions.WarnWithinTemplateInstantiation
    value: false
  - key: bugprone-sizeof-expression.WarnOnSizeOfConstant
    value: true
  - key: bugprone-sizeof-expression.WarnOnSizeOfPointer
    value: true
  - key: bugprone-sizeof-expression.WarnOnSizeOfExpression
    value: true
  
  # Cppcoreguidelines options
  - key: cppcoreguidelines-explicit-constructor
    value: true
  - key: cppcoreguidelines-explicit-conversion
    value: true
  - key: cppcoreguidelines-avoid-magic-numbers.IgnoredFloatingPointValues
    value: '1.0;2.0;100.0;0.0;0.5'
  - key: cppcoreguidelines-avoid-magic-numbers.IgnoredIntegerValues
    value: '0;1;2;10;100;1024;4096'
  - key: cppcoreguidelines-special-member-functions.AllowMissingMoveFunctions
    value: false
  - key: cppcoreguidelines-special-member-functions.AllowSoleDefaultDestructor
    value: true
  
  # Misc options
  - key: misc-const-correctness.TransformValues
    value: true
  - key: misc-const-correctness.TransformReferences
    value: true
  - key: misc-const-correctness.TransformPointers
    value: true
  - key: misc-const-correctness.WarnOnNonConstObjectPointer
    value: true
  
  # Google options
  - key: google-readability-namespace-comments.ShortNamespaceLines
    value: 10
  - key: google-readability-namespace-comments.SpacesBeforeComments
    value: 1
  - key: google-readability-todo.TodoString
    value: 'TODO|FIXME|XXX|HACK|BUG'
  
  # LLVM options
  - key: llvm-else-after-return.WarnOnConditionVariables
    value: false
  - key: llvm-qualified-auto.AddConstToQualified
    value: false
