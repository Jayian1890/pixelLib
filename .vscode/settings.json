{
    // VS Code settings optimized for clang-format-2025 extension
    // These settings provide the best experience with the extension's advanced features
    // clangd settings
    "clangd.arguments": [
        "--background-index",
        "--header-insertion=never",
        "--completion-style=detailed",
        "--all-scopes-completion",
        "--completion-parse=auto",
        "--log=verbose",
        "--include-cleaner=false"
    ],
    "clangd.checkUpdates": true,
    // C++ formatting settings
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.clang_format_sortIncludes.detected": true,
    // clang-format-2025 extension specific settings
    "clang-format-2025.enable": true,
    "clang-format-2025.executable": "clang-format",
    "clang-format-2025.style": "file",
    "clang-format-2025.style.file": "${workspaceFolder}/.clang-format",
    "clang-format-2025.style.fallback": "LLVM",
    "clang-format-2025.formatOnSave": true,
    "clang-format-2025.formatOnType": true,
    "clang-format-2025.formatOnPaste": true,
    "clang-format-2025.formatOnSaveMode": "file",
    "clang-format-2025.editorconfig": true,
    "clang-format-2025.defaultLanguage": "cpp",
    // Editor settings for optimal formatting experience
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.codeActionOnSaveTimeout": 2000,
    // C++ specific editor settings
    "[cpp]": {
        "editor.defaultFormatter": "ebextensions.clang-format-2025",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[hpp]": {
        "editor.defaultFormatter": "ebextensions.clang-format-2025",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[cc]": {
        "editor.defaultFormatter": "ebextensions.clang-format-2025",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[h]": {
        "editor.defaultFormatter": "ebextensions.clang-format-2025",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    // IntelliC++ settings for better C++ support (using clangd)
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.intelliSenseEngineFallback": false,
    "C_Cpp.autocomplete": "default",
    "C_Cpp.enhancedColorization": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.inlayHints": {
        "enabled": false
    },
    // File associations
    "files.associations": {
        "*.hpp": "cpp",
        "*.cc": "cpp",
        "*.cpp": "cpp",
        "*.cxx": "cpp",
        "*.h": "cpp",
        "*.c": "cpp"
    },
    // Git integration
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    // GitLens AI settings - configure for shorter commits
    "gitlens.ai.generateCommitMessage.enabled": true,
    "gitlens.experimental.generateCommitMessagePrompt": "Generate concise commit messages under 50 characters",
    // Explorer settings
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.cpp": "*.h, *.hpp, *.cpp",
        "*.hpp": "*.cpp, *.h",
        "*.cc": "*.h, *.hpp, *.cc",
        "*.c": "*.h"
    },
    // Build and test settings
    "files.exclude": {
        "**/build": false,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    // Auto-restart clangd on .clangd save
    "files.watcherExclude": {
        "**/build/**": true
    },
    "qodana.projectId": "B5dyq"
}